#!/bin/bash

echo "ðŸ¤– Starting JarvisOS System..."
echo "================================"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Check Node.js
if ! command_exists node; then
    echo -e "${RED}âŒ Node.js is not installed. Please install Node.js first.${NC}"
    exit 1
fi

# Check Python
if ! command_exists python3; then
    echo -e "${RED}âŒ Python 3 is not installed. Please install Python 3 first.${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Node.js $(node --version) detected${NC}"
echo -e "${GREEN}âœ… Python $(python3 --version | cut -d' ' -f2) detected${NC}"

# Start backend server in background
echo -e "${BLUE}ðŸš€ Starting Backend Server...${NC}"
cd backend
python3 -m pip install -r requirements.txt > /dev/null 2>&1
python3 main.py &
BACKEND_PID=$!
cd ..

# Wait for backend to start
sleep 3

# Start frontend
echo -e "${BLUE}ðŸš€ Starting Frontend...${NC}"
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}ðŸ“¦ Installing frontend dependencies...${NC}"
    npm install
fi

npm run dev &
FRONTEND_PID=$!

echo -e "${GREEN}âœ… JarvisOS is running!${NC}"
echo -e "${BLUE}Frontend: http://localhost:3000${NC}"
echo -e "${BLUE}Backend: http://localhost:8000${NC}"
echo ""
echo -e "${YELLOW}Press Ctrl+C to stop all services${NC}"

# Function to cleanup on exit
cleanup() {
    echo -e "\n${YELLOW}ðŸ›‘ Shutting down JarvisOS...${NC}"
    kill $BACKEND_PID 2>/dev/null
    kill $FRONTEND_PID 2>/dev/null
    echo -e "${GREEN}âœ… All services stopped${NC}"
    exit 0
}

# Trap Ctrl+C
trap cleanup INT

# Wait for processes
wait